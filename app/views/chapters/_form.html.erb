<div class="panel-body-chapter">
  <%= form_with(model: chapter, local: true) do |form| %>
    <div class="form-group col-md-6">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :section %><br />
      <%= form.select(:section_id, sections.collect{ |p| [p.title, p.id] }, {autofocus: true}, class: 'form-control') %>
    </div>
    <div class="form-group col-md-12">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
    <% if chapter.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>
        <ul>
          <% chapter.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="actions">
      <%= form.submit class: 'btn btn-danger'%>
    </div>
  <% end %>
</div>

