<div class="container">
  <div class="row centered-form">
    <div class="col-xs-8 col-sm-8 col-md-4 col-sm-offset-4 col-md-offset-4">
      <p id="notice"><%= notice %></p>
      <div class="panel panel-default devise-bs">
        <div class="panel-heading">
          <h4>Edit <%= @user.user_name %></h4>
        </div>
        <div class="panel-body">
          <%= form_for(@user, local: true) do |f| %>
            <div class="form-group">
              <%= f.label :admin %><br />
              <%= f.check_box(:admin, as: :boolean, checked_value: 1, unchecked_value: 0) %>
            </div>
            <div class="form-group">
              <%= f.label t('devise.passwords.first_name', default: 'First name') %><br />
              <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label t('devise.passwords.last_name', default: 'Last name') %><br />
              <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label t('devise.passwords.user_name', default: 'User name') %><br />
              <%= f.text_field :user_name, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label t('devise.passwords.gender', default: 'Gender') %><br />
              <%= f.select(:gender, %w[Male Female], {autofocus: true}, class: 'form-control') %>
            </div>
            <div class="form-group">
              <%= f.label t('devise.passwords.address', default: 'Address') %><br />
              <%= f.text_field :address, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label t('devise.passwords.birth_date', default: 'Birthdate') %><br />
              <%= f.datetime_select(:birth_date, {start_year: 1930, end_year: Time.now.year, discard_hour: true}, class: 'form-control birth')%>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= image_tag @user.avatar.url(:thumb)%>
              <%= f.file_field :avatar, class: 'filestyle' %>
            </div>
            <div class="actions">
              <%= f.submit "Update", class: 'btn btn-primary' %>
            </div>
          <% end %>
          <br />
          <%= link_to "Back", :back %>
          <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
    $(":file").filestyle({btnClass: "btn-danger"});
</script>